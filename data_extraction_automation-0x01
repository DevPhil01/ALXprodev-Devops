#!/bin/bash
name=$(jq -r '.name' data.json | sed 's/.*/\u&/'); type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/'); height=$(jq -r '.height' data.json); weight=$(jq -r '.weight' data.json); formatted_height=$(echo "scale=1; $height/10" | bc); formatted_weight=$(echo "scale=1; $weight/10" | bc); echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
