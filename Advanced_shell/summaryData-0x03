#!/bin/bash

# Directory containing PokÃ©mon JSON files
data_dir="pokemon_data"
output_file="pokemon_report.csv"

# Check if the directory exists
if [ ! -d "$data_dir" ]; then
    echo "Error: Directory '$data_dir' not found!"
    exit 1
fi

# Start the CSV file with headers
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through each JSON file and extract data
for file in "$data_dir"/*.json; do
    # Skip if no JSON files found
    [ -e "$file" ] || continue

    # Extract data using jq
    name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) substr($0,2)}')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

echo ""
echo "CSV Report generated at: $output_file"
echo ""

# Display the report content
cat "$output_file"
echo ""

# Calculate averages using awk
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    if (count > 0)
        printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", sum_h/count, sum_w/count;
    else
        print "No data found.";
}' "$output_file"

