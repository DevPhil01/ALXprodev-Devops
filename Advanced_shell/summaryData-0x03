#!/bin/bash

# Directory containing Pokémon JSON files
data_dir="pokemon_data"
output_file="pokemon_report.csv"

# Check if directory exists
if [ ! -d "$data_dir" ]; then
    echo "Error: Directory '$data_dir' not found!"
    exit 1
fi

# Start CSV file with header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through all JSON files in the folder
for file in "$data_dir"/*.json; do
    [ -e "$file" ] || continue

    # Extract Pokémon name from JSON filename using sed
    name=$(echo "$file" | sed 's#.*/##; s/\.json$//' | awk '{print toupper(substr($0,1,1)) substr($0,2)}')

    # Extract height and weight using jq
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert decimetres → metres and hectograms → kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Append formatted line to CSV file
    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

echo ""
echo "CSV Report generated at: $output_file"
echo ""

# Display report content
cat "$output_file"
echo ""

# Use awk to calculate and display averages
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    if (count > 0)
        printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", sum_h/count, sum_w/count;
    else
        print "No data found.";
}' "$output_file"

